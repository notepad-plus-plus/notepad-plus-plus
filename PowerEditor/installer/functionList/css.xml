<NotepadPlus>
    <functionList>
        <parser id="css_function" displayName="CSS">
            <function mainExpr="^([^\n\{]+)\s*\{">
                <functionName>
                    <nameExpr expr="[^\n\{]+"/>
                </functionName>
            </function>
        </parser>
    </functionList>
</NotepadPlus>