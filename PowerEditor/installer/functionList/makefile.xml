<NotepadPlus>
  <functionList>
    <!-- functionList parser for Makefile format (langID="10") -->
    <parser displayName="Makefile" id="makefile" commentExpr="(?m-s:[#].*$)">
      <function mainExpr="^[\w\$\(\)\-\/\.]+:">
        <functionName>
          <nameExpr expr="[\w\$\(\)\-\/\.]+"/>
        </functionName>
      </function>
    </parser>
  </functionList>
</NotepadPlus>
